@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Areas/SpaMisReport/NgCode/frmMomProdWiseNtlNuDist.js"></script>
<div ng-app="myApp" ng-controller="MomProdWiseNtlNuDistCtrl">
    <div class="loader LoaderStyle" ng-cloak data-loading>
        <img src="~/Content/img/loader.gif" width="100" height="100" style="top: 50%; left: 50%;" />
    </div>
    <div class="form-horizontal" ng-form="frmMomProdWiseNtlNuDist">
        <section class="content">
            <div class="row">
                <div class="col-md-12">
                    <div class="box box-warning">
                        <div class="box-header with-border">
                            <div class="form-group">
                                <div class="col-md-12">
                                    <h2 class="box-title">
                                        <strong ng-cloak>{{FormTitle}}</strong>
                                    </h2>
                                </div>
                            </div>
                        </div>
                        <div class="box-body">
                            <form role="form">
                                <div class="row">

                                    <div class="form-group">
                                        <div class="col-md-2">
                                            <label class="control-label required">Report Type</label>
                                        </div>

                                        <div class="col-md-4">
                                            <ui-select class="form-control form-white" ng-change="OnReportTypeChange()" ng-model="frmMomProdWiseNtlNuDist.RepType" theme="select2" ng-cloak required>
                                                <ui-select-match placeholder="-- Please Select --">{{$select.selected.ReportTypeName}}</ui-select-match>
                                                <ui-select-choices repeat="reptypes in RepTypes | propsFilter: {ReportTypeName: $select.search, ReportTypeValue: $select.search}">
                                                    <div ng-bind-html="reptypes.ReportTypeName | highlight: $select.search"></div>
                                                </ui-select-choices>
                                            </ui-select>
                                        </div>
                                    </div>

                                    <div class="form-group">

                                        <div class="col-md-2">
                                            <label class="control-label required">Base Product</label>
                                        </div>

                                        <div class="col-md-4">
                                            <ui-select class="form-control form-white" ng-change="OnChangeProduct()" ng-model="frmMomProdWiseNtlNuDist.Product" theme="select2" ng-cloak required>
                                                <ui-select-match placeholder="-- Please Select --">{{$select.selected.Name}}</ui-select-match>
                                                <ui-select-choices repeat="Product in Products | propsFilter: {Name: $select.search, Code: $select.search}">
                                                    <div ng-bind-html="Product.Name | highlight: $select.search"></div>
                                                    <small>
                                                        <b>Code: </b><span ng-bind-html="''+Product.Code | highlight: $select.search"></span> &nbsp;&nbsp;&nbsp;
                                                    </small>
                                                </ui-select-choices>
                                            </ui-select>
                                        </div>
                                    </div>


                                    <br />
                                    <div class="form-group">
                                        <div class="col-md-7">
                                            <div class="text-right  m-t-10">
                                                <button type="button" class="btn btn-embossed btn-success" ng-click="GetMomProdWiseNtlNuDist()" ng-class="{'btn-transparent': frmMomProdWiseNtlNuDist.$invalid }" ng-disabled="frmMomProdWiseNtlNuDist.$invalid"><i class="fa fa-search"></i>View</button>
                                                <button type="button" class="btn btn-embossed btn-danger" ng-click="Reset()"><i class="fa fa-refresh"></i>&nbsp Reset</button>
                                            </div>
                                        </div>
                                    </div>
                                    <div id="gridMomProdWiseNtlNuDist" ui-grid="gridMomProdWiseNtlNuDist" class="grid" style="height: 350px; width: 100%;" ui-grid-auto-resize ui-grid-resize-columns ui-grid-exporter></div>
                                </div>
                            </form>

                        </div>

                    </div>
                </div>

            </div>
        </section>
    </div>
</div>
<script>
    $('.datepicker').datepicker({
        todayBtn: "linked",
        autoclose: true,
        todayHighlight: true,
        format: 'dd/mm/yyyy',
        changeMonth: true,
        changeYear: true

    })

</script>






