
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Areas/Security/NgCode/frmRoleInfo.js"></script>
<div ng-app="myApp" ng-controller="roleInfoCtrl">
    <div class="loader LoaderStyle"  ng-cloak data-loading>
        <img src="~/Content/img/loader.gif" width="100" height="100" style="top: 50%; left: 50%;" />
    </div>
    <div class="form-horizontal" ng-form="frmRoleInfo">
        <section class="content">
            <div class="row">
                <div class="col-md-12">
                    <div class="box box-warning">
                        <div class="box-header with-border">
                            <div class="form-group">
                                <div class="col-md-5">
                                    <h2 class="box-title">
                                        <strong ng-cloak>{{FormTitle}}</strong>
                                    </h2>
                                </div>
                                <div class="col-md-7">
                                    <div class="text-right  m-t-10">
                                        <button type="button" class="btn btn-embossed btn-primary" ng-click="SaveData()" ng-class="{'btn-transparent': frmRoleInfo.$invalid}" ng-disabled="frmRoleInfo.$invalid"><i class="fa fa-save"></i>&nbsp{{btnSaveValue}}</button>
                                        <button type="button" class="btn btn-embossed btn-danger" ng-click="Reset()"><i class="fa fa-refresh"></i>&nbsp Reset</button>
                                        @*<button type="button" class="btn btn-embossed btn-success" ng-click="GetRoleList()"><i class="fa fa-search"></i>&nbspSearch</button>*@
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="box-body">

                            <div class="form-group">
                                <div class="col-md-2">
                                    <label class="control-label">Role Code</label>
                                </div>
                                <div class="col-md-3">
                                    <input type="text" class="form-control" id="RoleId" name="RoleId" ng-model="RoleId" placeholder="Auto Generated" disabled>
                                </div>
                                <div class="col-md-2">
                                    <label class="control-label required">Role Name</label>
                                </div>
                                <div class="col-md-3" ng-class="{'has-error':frmRoleInfo.RoleName.$error.maxlength}">
                                    <input type="text" class="form-control" id="RoleName" name="RoleName" ng-model="RoleName" placeholder="Name" required ng-maxlength="50">
                                </div>
                            </div>



                            <div class="form-group">
                                <div class="col-md-2">
                                    <label class="control-label required">Status</label>
                                </div>
                                <div class="col-md-3">
                                    <select class="form-control form-white input-sm" ng-model="Status" required>
                                        <option value="Active">Active</option>
                                        <option value="Inactive">Inactive</option>
                                    </select>
                                </div>
                            </div>



                            </div>
                    </div>
                </div>
            </div>

            <div id="gridR" ui-grid="gridROptions" class="grid" style="height: 400px; width: 100%;" ui-grid-auto-resize ui-grid-resize-columns></div>

        </section>
    </div>
