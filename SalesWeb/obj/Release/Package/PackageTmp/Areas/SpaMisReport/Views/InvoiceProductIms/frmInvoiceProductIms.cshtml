@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Areas/SpaMisReport/NgCode/frmInvoiceProductIms.js"></script>
<form class="form" action="/InvoiceProductIms/RV" id="R1Form" method="post" name="H1Form" target="_blank">

    <div ng-app="myApp" ng-controller="InvoiceProductImsCtrl">
        <div class="loader LoaderStyle" ng-cloak data-loading>
            <img src="~/Content/img/loader.gif" width="100" height="100" style="top: 50%; left: 50%;" />
        </div>
        <div class="form-horizontal" ng-form="frmInvoiceProductIms">
            <section class="content">
                <div class="row">
                    <div class="col-md-12">
                        <div class="box box-warning">
                            <div class="box-header with-border">
                                <div class="form-group">
                                    <div class="col-md-5">
                                        <h2 class="box-title">
                                            <strong ng-cloak>{{FormTitle}}</strong>
                                        </h2>
                                    </div>
                                </div>
                            </div>

                            <div class="box-body">
                                @*<form role="form">*@

                                <div class="row">

                                    <div class="form-group">
                                        <div class="col-md-2">
                                            <label class="control-label required">Report Type</label>
                                        </div>

                                        <div class="col-md-4">
                                            <ui-select class="form-control form-white" ng-change="OnReportTypeChange()" ng-model="frmInvoiceProductIms.RepType" theme="select2" ng-cloak required>
                                                <ui-select-match placeholder="-- Please Select --">{{$select.selected.ReportTypeName}}</ui-select-match>
                                                <ui-select-choices repeat="reptypes in RepTypes | propsFilter: {ReportTypeName: $select.search, ReportTypeValue: $select.search}">
                                                    <div ng-bind-html="reptypes.ReportTypeName | highlight: $select.search"></div>
                                                </ui-select-choices>
                                            </ui-select>
                                        </div>

                                        <div class="col-md-2">
                                            <label class="control-label">Division</label>
                                        </div>
                                        <div class="col-md-3">
                                            <ui-select class="form-control" ng-change="OnDivisionClick()" ng-model="frmInvoiceProductIms.Division" theme="select2" ng-cloak required>
                                                <ui-select-match placeholder="-- Please Select --">{{$select.selected.DivisionName}}</ui-select-match>
                                                <ui-select-choices repeat="divisions in Divisions | propsFilter: {DivisionName: $select.search, DivisionCode: $select.search}">
                                                    <div ng-bind-html="divisions.DivisionName | highlight: $select.search"></div>
                                                    @*<small>
                                                            <b>Code: </b><span ng-bind-html="''+divisions.DivisionCode | highlight: $select.search"></span> &nbsp;&nbsp;&nbsp;
                                                        </small>*@
                                                </ui-select-choices>
                                            </ui-select>
                                        </div>
                                        <div class="col-md-1">
                                            <input type="text" class="form-control" id="dCode" name="dCode" ng-model="dCode" readonly style="display: none" />
                                        </div>


                                    </div>


                                    <div class="form-group">

                                        <div class="col-md-2">
                                            <label class="control-label">From Date</label>
                                        </div>
                                        <div class="col-md-3">
                                            <input type="text" ng-disabled="isDisabled" class="form-control pull-right datepicker clickable" name="FromDate" id="FromDate" ng-model="FromDate" readonly>
                                        </div>


                                        <div class="col-md-3">
                                            <label class="control-label">Region</label>
                                        </div>
                                        <div class="col-md-3">
                                            <ui-select class="form-control" ng-change="OnRegionClick()" ng-model="frmInvoiceProductIms.Region" theme="select2" ng-cloak required>
                                                <ui-select-match placeholder="-- Please Select --">{{$select.selected.RegionName}}</ui-select-match>
                                                <ui-select-choices repeat="regions in Regions | propsFilter: {RegionName: $select.search, RegionCode: $select.search}">
                                                    <div ng-bind-html="regions.RegionName | highlight: $select.search"></div>
                                                    @*<small>
                                                            <b>Code: </b><span ng-bind-html="''+regions.RegionCode | highlight: $select.search"></span> &nbsp;&nbsp;&nbsp;
                                                        </small>*@
                                                </ui-select-choices>
                                            </ui-select>
                                        </div>
                                        <div class="col-md-1">
                                            <input type="text" class="form-control" id="rCode" name="rCode" ng-model="rCode" readonly style="display: none" />
                                        </div>
                                    </div>




                                    <div class="form-group">





                                        <div class="col-md-2">
                                            <label class="control-label">To Date</label>
                                        </div>
                                        <div class="col-md-3">
                                            <input type="text" ng-disabled="isDisabled" class="form-control pull-right datepicker clickable" ng-model="ToDate" readonly>
                                        </div>




                                        <div class="col-md-3">
                                            <label class="control-label">Area</label>
                                        </div>
                                        <div class="col-md-3">
                                            <ui-select class="form-control" ng-change="OnAreaClick()" ng-model="frmInvoiceProductIms.Area" theme="select2" ng-cloak required>
                                                <ui-select-match placeholder="-- Please Select --">{{$select.selected.AreaName}}</ui-select-match>
                                                <ui-select-choices repeat="areas in Areas | propsFilter: {AreaName: $select.search, AreaCode: $select.search}">
                                                    <div ng-bind-html="areas.AreaName | highlight: $select.search"></div>
                                                    @*<small>
                                                            <b>Code: </b><span ng-bind-html="''+areas.AreaCode | highlight: $select.search"></span> &nbsp;&nbsp;&nbsp;
                                                        </small>*@
                                                </ui-select-choices>
                                            </ui-select>
                                        </div>
                                        <div class="col-md-1">
                                            <input type="text" class="form-control" id="aCode" name="aCode" ng-model="aCode" readonly style="display: none" />
                                        </div>
                                    </div>



                                    <div class="form-group">

                                        <div class="col-md-5">
                                            <label class="control-label"></label>
                                        </div>

                                        <div class="col-md-3">
                                            <label class="control-label">Territory</label>
                                        </div>
                                        <div class="col-md-3">
                                            <ui-select class="form-control" ng-change="OnTerritoryClick()" ng-model="frmInvoiceProductIms.Territory" theme="select2" ng-cloak required>
                                                <ui-select-match placeholder="-- Please Select --">{{$select.selected.TerritoryName}}</ui-select-match>
                                                <ui-select-choices repeat="territories in Territories | propsFilter: {TerritoryName: $select.search, TerritoryCode: $select.search} | limitTo: 100" value="{{$selected.TerritoryCode}}">
                                                    <div ng-bind-html="territories.TerritoryName | highlight: $select.search"></div>
                                                    @*<small>
                                                            <b>Code: </b><span ng-bind-html="''+territories.TerritoryCode | highlight: $select.search"></span> &nbsp;&nbsp;&nbsp;
                                                        </small>*@
                                                </ui-select-choices>
                                            </ui-select>
                                        </div>

                                        <div class="col-md-1">
                                            <input type="text" class="form-control" id="tCode" name="tCode" ng-model="tCode" readonly style="display: none" />
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        <div class="col-md-5">
                                            <label class="control-label"></label>
                                        </div>

                                        <div class="col-md-3">
                                            <label class="control-label">Customer</label>
                                        </div>
                                        <div class="col-md-3">
                                            <ui-select class="form-control" ng-change="OnCustomerClick()" ng-model="frmInvoiceProductIms.Customer" theme="select2" ng-cloak required>
                                                <ui-select-match placeholder="-- Please Select --">{{$select.selected.CustomerName}}</ui-select-match>
                                                <ui-select-choices repeat="customers in Customers | propsFilter: {CustomerName: $select.search, CustomerCode: $select.search}">
                                                    <div ng-bind-html="customers.CustomerName | highlight: $select.search"></div>
                                                    <small>
                                                        <b>Code: </b><span ng-bind-html="''+customers.CustomerCode | highlight: $select.search"></span> &nbsp;&nbsp;&nbsp;
                                                    </small>
                                                </ui-select-choices>
                                            </ui-select>
                                        </div>

                                        <div class="col-md-1">
                                            <input type="text" class="form-control" id="cCode" name="cCode" ng-model="cCode" readonly style="display: none" />
                                        </div>
                                    </div>





                                    <div class="form-group">
                                        <div class="col-md-5">
                                            <label class="control-label"></label>
                                        </div>
                                        <div class="col-md-3">
                                            <label class="control-label">Brand</label>
                                        </div>
                                        <div class="col-md-3">
                                            <ui-select class="form-control" ng-change="OnBrandClick()" ng-model="frmInvoiceProductIms.Brand" theme="select2" ng-cloak required>
                                                <ui-select-match placeholder="-- Please Select --">{{$select.selected.BrandName}}</ui-select-match>
                                                <ui-select-choices repeat="Brand in Brands | propsFilter: {BrandName: $select.search, BrandCode: $select.search}">
                                                    <div ng-bind-html="Brand.BrandName | highlight: $select.search"></div>
                                                    @*<small>
                                                            <b>Code: </b><span ng-bind-html="''+Brand.BrandCode | highlight: $select.search"></span> &nbsp;&nbsp;&nbsp;
                                                        </small>*@
                                                </ui-select-choices>
                                            </ui-select>
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        <div class="col-md-5">
                                            <label class="control-label"></label>
                                        </div>
                                        <div class="col-md-3">
                                            <label class="control-label">Product Category</label>
                                        </div>
                                        <div class="col-md-3">
                                            <ui-select class="form-control form-white" ng-change="OnCategoryClick()" ng-model="frmInvoiceProductIms.ProductCategory" theme="select2" ng-cloak required>
                                                <ui-select-match placeholder="-- Please Select --">{{$select.selected.CategoryName}}</ui-select-match>
                                                <ui-select-choices repeat="ProductCategory in ProductCategories | propsFilter: {CategoryName: $select.search, CategoryCode: $select.search}">
                                                    <div ng-bind-html="ProductCategory.CategoryName | highlight: $select.search"></div>
                                                    @*<small>
                                                            <b>Code: </b><span ng-bind-html="''+ProductCategory.CategoryCode | highlight: $select.search"></span> &nbsp;&nbsp;&nbsp;
                                                        </small>*@
                                                </ui-select-choices>
                                            </ui-select>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-5">
                                            <label class="control-label"></label>
                                        </div>
                                        <div class="col-md-3">
                                            <label class="control-label">Product</label>
                                        </div>
                                        <div class="col-md-3">
                                            <ui-select class="form-control" ng-change="OnBaseProductClick()" ng-model="frmInvoiceProductIms.BaseProduct" theme="select2" ng-cloak required>
                                                <ui-select-match placeholder="-- Please Select --">{{$select.selected.BaseProductName}}</ui-select-match>
                                                <ui-select-choices repeat="BaseProduct in BaseProducts | propsFilter: {BaseProductName: $select.search, BaseProductCode: $select.search} | limitTo: 100" value="{{$selected.BaseProductCode}}">
                                                    <div ng-bind-html="BaseProduct.BaseProductName | highlight: $select.search"></div>
                                                    @*<small>
                                                          <b>Code: </b><span ng-bind-html="''+BaseProduct.BaseProductCode | highlight: $select.search"></span> &nbsp;&nbsp;&nbsp;
                                                        </small>*@
                                                </ui-select-choices>
                                            </ui-select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-5">
                                            <label class="control-label"></label>
                                        </div>
                                        <div class="col-md-3">
                                            <label class="control-label">SKU</label>
                                        </div>
                                        <div class="col-md-4">
                                            <ui-select class="form-control form-white" ng-change="OnChangeProduct()" ng-model="frmInvoiceProductIms.Product" theme="select2" ng-cloak required>
                                                <ui-select-match placeholder="-- Please Select --">{{$select.selected.ProductName}}</ui-select-match>
                                                <ui-select-choices repeat="Product in Products | propsFilter: {ProductName: $select.search, ProductCode: $select.search}">
                                                    <div ng-bind-html=" Product.ProductName | highlight: $select.search">
                                                    </div>

                                                    <small>
                                                        @*<b>Code: </b><span ng-bind-html="''+Product.ProductCode | highlight: $select.search"></span> &nbsp;&nbsp;&nbsp;*@
                                                        <b>Pack Size: </b><span ng-bind-html="''+Product.PackSize | highlight: $select.search"></span> &nbsp;&nbsp;&nbsp;
                                                    </small>
                                                </ui-select-choices>
                                            </ui-select>
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        <div class="col-md-7">
                                            <div class="text-right  m-t-10">


                                                @*<button id="btnReport" type="submit" class="btn btn-primary btn-lg" value="button"ng-class="{'btn-transparent': frmInvoiceProductIms.$invalid }" ng-disabled="frmInvoiceProductIms.$invalid"><i class="glyphicon glyphicon-search"></i>Generate Excel</button>*@
                                                <button type="button" class="btn btn-embossed btn-success" ng-click="GetInvoiceProductIms()" ng-class="{'btn-transparent': frmInvoiceProductIms.$invalid }" ng-disabled="frmInvoiceProductIms.$invalid"><i class="fa fa-search"></i>View</button>
                                                <button type="button" class="btn btn-embossed btn-danger" ng-click="Reset()"><i class="fa fa-refresh"></i>&nbsp Reset</button>
                                            </div>
                                        </div>
                                    </div>
                                    <br />
                                    <div id="gridInvoiceProductIms" ui-grid="gridInvoiceProductIms" class="grid" style="height: 200px; width: 100%;" ui-grid-auto-resize ui-grid-resize-columns ui-grid-exporter></div>

                                </div>
                                @*</form>*@

                            </div>

                        </div>
                    </div>

                </div>
            </section>
        </div>
    </div>

</form>
<script>
        $('.datepicker').datepicker({
            todayBtn: "linked",
            autoclose: true,
            todayHighlight: true,
            format: 'dd/mm/yyyy',
            changeMonth: true,
            changeYear: true
        })

</script>






