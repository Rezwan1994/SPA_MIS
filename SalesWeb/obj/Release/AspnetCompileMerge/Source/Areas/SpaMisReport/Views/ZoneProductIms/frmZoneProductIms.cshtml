

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Areas/SpaMisReport/NgCode/frmZoneProductIms.js"></script>
<form class="form" action="/ZoneProductIms/RV" id="R1Form" method="post" name="H1Form" target="_blank">

    <div ng-app="myApp" ng-controller="ZoneProductImsCtrl">
        <div class="loader LoaderStyle" ng-cloak data-loading>
            <img src="~/Content/img/loader.gif" width="100" height="100" style="top: 50%; left: 50%;" />
        </div>
        <div class="form-horizontal" ng-form="frmZoneProductIms">
            <section class="content">
                <div class="row">
                    <div class="col-md-12">
                        <div class="box box-warning">
                            <div class="box-header with-border">
                                <div class="form-group">
                                    <div class="col-md-5">
                                        <h2 class="box-title">
                                            <strong ng-cloak>{{FormTitle}}</strong>
                                        </h2>
                                    </div>
                                </div>
                            </div>

                            <div class="box-body">
                                <div class="row">
                                    <div class="form-group">
                                        <div class="col-md-2">
                                            <label class="control-label required">Report Type</label>
                                        </div>
                                        <div class="col-md-4">
                                            <ui-select class="form-control form-white" ng-change="OnReportTypeChange()" ng-model="frmZoneProductIms.RepType" theme="select2" ng-cloak required>
                                                <ui-select-match placeholder="-- Please Select --">{{$select.selected.ReportTypeName}}</ui-select-match>
                                                <ui-select-choices repeat="reptypes in RepTypes | propsFilter: {ReportTypeName: $select.search, ReportTypeValue: $select.search}">
                                                    <div ng-bind-html="reptypes.ReportTypeName | highlight: $select.search"></div>
                                                </ui-select-choices>
                                            </ui-select>
                                        </div>
                                        <div class="col-md-2">
                                            <label class="control-label">Division</label>
                                        </div>
                                        <div class="col-md-3">
                                            <ui-select class="form-control" ng-change="OnDivisionClick()" ng-model="frmZoneProductIms.Division" theme="select2" ng-cloak required>
                                                <ui-select-match placeholder="-- Please Select --">{{$select.selected.DivisionName}}</ui-select-match>
                                                <ui-select-choices repeat="divisions in Divisions | propsFilter: {DivisionName: $select.search, DivisionCode: $select.search}">
                                                    <div ng-bind-html="divisions.DivisionName | highlight: $select.search"></div>
                                                </ui-select-choices>
                                            </ui-select>
                                        </div>
                                        <div class="col-md-1">
                                            <input type="text" class="form-control" id="dCode" name="dCode" ng-model="dCode" readonly style="display: none" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-2">
                                            <label class="control-label">From Date</label>
                                        </div>
                                        <div class="col-md-3">
                                            <input type="text" ng-disabled="isDisabled" class="form-control pull-right datepicker clickable" name="FromDate" id="FromDate" ng-model="FromDate" readonly>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-2">
                                            <label class="control-label">To Date</label>
                                        </div>
                                        <div class="col-md-3">
                                            <input type="text" ng-disabled="isDisabled" class="form-control pull-right datepicker clickable" ng-model="ToDate" readonly>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-7">
                                            <div class="text-right  m-t-10">
                                                <button type="button" class="btn btn-embossed btn-success" ng-click="GetZoneProductIms()" ng-class="{'btn-transparent': frmZoneProductIms.$invalid }" ng-disabled="frmZoneProductIms.$invalid"><i class="fa fa-search"></i>View</button>
                                                <button type="button" class="btn btn-embossed btn-danger" ng-click="Reset()"><i class="fa fa-refresh"></i>&nbsp Reset</button>
                                            </div>
                                        </div>
                                    </div>
                                    <br />
                                    <div id="gridDivisionProductIms" ui-grid="gridDivisionProductIms" class="grid" style="height: 340px; width: 100%;" ui-grid-auto-resize ui-grid-resize-columns ui-grid-exporter></div>
                                </div>                      
                            </div>

                        </div>
                    </div>

                </div>
            </section>
        </div>
    </div>

</form>
<script>
        $('.datepicker').datepicker({
            todayBtn: "linked",
            autoclose: true,
            todayHighlight: true,
            format: 'dd/mm/yyyy',
            changeMonth: true,
            changeYear: true
        })

</script>






