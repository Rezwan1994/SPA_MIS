@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Areas/SpaMisReport/NgCode/frmComboBonusDec.js"></script>
<div ng-app="myApp" ng-controller="ComboBonusDecCtrl">
    <div class="loader LoaderStyle" ng-cloak data-loading>
        <img src="~/Content/img/loader.gif" width="100" height="100" style="top: 50%; left: 50%;" />
    </div>
    <div class="form-horizontal" ng-form="frmComboBonusDec">
        <section class="content">
            <div class="row">
                <div class="col-md-12">
                    <div class="box box-warning">
                        <div class="box-header with-border">
                            <div class="form-group">
                                <div class="col-md-5">
                                    <h2 class="box-title">
                                        <strong ng-cloak>{{FormTitle}}</strong>
                                    </h2>
                                </div>
                            </div>
                        </div>
                        <div class="box-body">
                            <form role="form">
                                <div class="row">
                                    <div class="form-group">
                                        <div class="col-md-2">
                                            <label class="control-label">Combo Bonus</label>
                                        </div>
                                        <div class="col-md-9">
                                            <ui-select class="form-control" ng-model="frmComboBonusDec.ComboBonus" theme="select2" ng-cloak required>
                                                <ui-select-match placeholder="-- Please Select --">{{$select.selected.ComboBonusName}}</ui-select-match>
                                                <ui-select-choices repeat="ComboBonus in ComboBonuses | propsFilter: {ComboBonusName: $select.search, ComboBonusNo: $select.search}">
                                                    <div ng-bind-html="ComboBonus.ComboBonusName | highlight: $select.search"></div>
                                                    <small>
                                                        <b>Combo Bonus No: </b><span ng-bind-html="''+ComboBonus.ComboBonusNo | highlight: $select.search"></span> &nbsp;&nbsp;&nbsp;
                                                        <b>Status: </b><span ng-bind-html="''+ComboBonus.Status | highlight: $select.search"></span> &nbsp;&nbsp;&nbsp;
                                                        <b>Duration: </b><span ng-bind-html="''+ComboBonus.Duration | highlight: $select.search"></span> &nbsp;&nbsp;&nbsp;
                                                    </small>
                                                </ui-select-choices>
                                            </ui-select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-7">
                                            <div class="text-right  m-t-10">
                                                <button type="button" class="btn btn-embossed btn-success" ng-click="GetComboBonusDeclaration()" ng-class="{'btn-transparent': frmComboBonusDec.$invalid }" ng-disabled="frmComboBonusDec.$invalid"><i class="fa fa-search"></i>View</button>
                                                <button type="button" class="btn btn-embossed btn-danger" ng-click="Reset()"><i class="fa fa-refresh"></i>&nbsp Reset</button>
                                            </div>
                                        </div>
                                    </div>
                                    <div id="gridComboBonusDec" ui-grid="gridComboBonusDec" class="grid" style="height: 400px; width: 100%;" ui-grid-auto-resize ui-grid-resize-columns ui-grid-exporter></div>

                                </div>
                            </form>

                        </div>

                    </div>
                </div>

            </div>
        </section>
    </div>
</div>
<script>
    $('.datepicker').datepicker({
        todayBtn: "linked",
        autoclose: true,
        todayHighlight: true,
        format: 'dd/mm/yyyy',
        changeMonth: true,
        changeYear: true
    })

</script>








