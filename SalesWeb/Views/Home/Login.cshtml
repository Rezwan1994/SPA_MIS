                    </li>

                    <li>
                        <img src="~/Content/img/Slider/Slider15.jpg" class="imgItem" />
                    </li>

                    <li>
                        <img src="~/Content/img/Slider/Slider16.jpg" class="imgItem" />
                    </li>

                    <li>
                        <img src="~/Content/img/Slider/Slider17.jpg" class="imgItem" />
                    </li>

                    <li>
                        <img src="~/Content/img/Slider/Slider18.jpg" class="imgItem" />
                    </li>
                    <li>
                        <img src="" class="imgItem" />
                    </li>
                </ul>


                <div class="btns" id="next"><i class="fa fa-arrow-right" style="margin-top: 25px;"></i></div>
                <div class="btns" id="previous"><i class="fa fa-arrow-left" style="margin-top: 25px;"></i></div>
                @*<div id="counter"></div>*@
                <div id="pagination-wrap">
                    <ul></ul>
                </div>


            </div>

        </div>
    </div>

    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%'
            });
        });

        var pos = 0;
        var totalSlides = $('.imgItem').length;
        var sliderWidth = $('#slider-wrap').width();
        $(document).ready(function () {

            $(".myApp").css("height", window.innerHeight - 202);

            $('#slider-wrap ul#slider').width($('#slider-wrap').width() * $('.imgItem').length);

            $('#next').click(function () {
                slideRight();
            });
            $('#previous').click(function () {
                slideLeft();
            });
            var autoSlider = setInterval(slideRight, 3000);


            $.each($('.imgItem'), function () {

                var c = $(this).attr("data-color");
                $(this).css("background", c);

                var li = document.createElement('li');
                $('#pagination-wrap ul').append(li);
            });
            countSlides();
            pagination();

            $('#slider-wrap').hover(
                function () { $(this).addClass('active'); clearInterval(autoSlider); },
                function () { $(this).removeClass('active'); autoSlider = setInterval(slideRight, 3000); }
            );
        });

        function slideLeft() {
            pos--;
            if (pos == -1) { pos = $('.imgItem').length - 1; }
            $('#slider-wrap ul#slider').css('left', -($('#slider-wrap').width() * pos));
            countSlides();
            pagination();
        }


        function slideRight() {
            pos++;
            if (pos == $('.imgItem').length - 1) { pos = 0; }
            $('#slider-wrap ul#slider').css('left', -($('#slider-wrap').width() * pos));

            //*> optional
            countSlides();
            pagination();
        }

        function countSlides() {
            $('#counter').html(pos + 1 + ' / ' + ($('.imgItem').length - 1));
        }

        function pagination() {
            $('#pagination-wrap ul li').removeClass('active');
            $('#pagination-wrap ul li:eq(' + pos + ')').addClass('active');
        }
    </script>
</body>
