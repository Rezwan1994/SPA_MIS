    <script>
    LoadMenu();
    function LoadMenu() {
        $.ajax({
            url: "/Home/CreateMenu",
            type: 'GET',
            contentType: "application/json; charset=utf-8",
            dataType: "html",
            success: function (data) {
                $(".sidebar-menu").append(data);
                activeMenu();
            }
        }); 
    }

    $(function() {
        $('#example1').DataTable();
        $('#example2').DataTable({
            'paging': true,
            'lengthChange': false,
            'searching': true,
            'ordering': true,
            'info': true,
            'autoWidth': false
        })
    });

    $('#signOutLink').click(function () {
        $.ajax({
            type: "POST",
            url: '@Url.Action("LogOut", "Home", new { Area = "" })',
            cache: false,
            success: function (data) {
                window.location.replace('@Url.Action("Login", "Home", new { Area = "" })');
            },
            error: function () {
            }
        });
    });
    $('#chngPassLink').click(function () {
        window.location.replace('@Url.Action("frmChngPass", "ChangPass", new { Area = "Security" })');
    });

    $('.modal-content').resizable({
        minHeight: 300,
        minWidth: 300
        });
        $('.modal-content ').draggable();
    $(".datepicker").keyup(function (e)
    {
        switch(e.keyCode) {
        case 46:  
            case 8:  
                $(".datepicker").datepicker('setDate', null);
            break;
        default:
            e.preventDefault();
            break;
        }
        });

    function activeMenu() {
        var url = window.location;
        $('ul.sidebar-menu a').filter(function() {
            return this.href == url;
        }).parent().siblings().removeClass('active').end().addClass('active');
        $('ul.treeview-menu a').filter(function() {
            return this.href == url;
        }).parentsUntil(".sidebar-menu > .treeview-menu").siblings().removeClass('active menu-open').end().addClass('active menu-open');
    }
    $('legend.collapsable').parents("fieldset").find('.form-group').hide();
    $('legend.collapsable').parents("fieldset").find('.row').hide();
    $('legend.collapsable').parents("fieldset").css({ "height": "35px" });
    $('legend.collapsable').click(function () {
        if ($(this).parents("fieldset").find('.form-group').is(':visible') || $(this).parents("fieldset").find('.row').is(':visible')) {
            $(this).parents("fieldset").find('.form-group').hide();
            $(this).parents("fieldset").find('.row').hide();
            $(this).parents("fieldset").css({ "height": "35px"});
        } else {
            $(this).parents("fieldset").find('.form-group').show();
            $(this).parents("fieldset").find('.row').show();
            $(this).parents("fieldset").removeAttr("style");
        }
        if ($(this).children("i").hasClass('fa-plus-square-o')) {
            $(this).children("i").removeClass("fa-plus-square-o").addClass("fa-minus-square-o");
        }
        else if ($(this).children("i").hasClass('fa-minus-square-o')) {
            $(this).children("i").removeClass("fa-minus-square-o").addClass("fa-plus-square-o");
        }

        return false;
        });


        $('legend.collapsable_open').parents("fieldset").find('.form-group').show();
        $('legend.collapsable_open').parents("fieldset").find('.row').show();
        $('legend.collapsable_open').parents("fieldset").css({ "height": "35px" });
        $('legend.collapsable_open').click(function () {
        if ($(this).parents("fieldset").find('.form-group').is(':visible') || $(this).parents("fieldset").find('.row').is(':visible')) {
            $(this).parents("fieldset").find('.form-group').hide();
            $(this).parents("fieldset").find('.row').hide();
            $(this).parents("fieldset").css({ "height": "35px" });
        } else {
            $(this).parents("fieldset").find('.form-group').show();
            $(this).parents("fieldset").find('.row').show();
            $(this).parents("fieldset").removeAttr("style");
        }
        if ($(this).children("i").hasClass('fa-plus-square-o')) {
            $(this).children("i").removeClass("fa-plus-square-o").addClass("fa-minus-square-o");
        }
        else if ($(this).children("i").hasClass('fa-minus-square-o')) {
            $(this).children("i").removeClass("fa-minus-square-o").addClass("fa-plus-square-o");
        }

        return false;
    });



